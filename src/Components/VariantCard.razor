
  

    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
      <div class="card shadow-lg p-3 mb-5 bg-white rounded">

        <div class="card-header bg-white text-center">
          <a href="@productLink"><img class="card-img" src="@url" alt="@name"></a>
        </div>
        
        @* <div class="card-img-overlay d-flex justify-content-end">
          <a href="#" class="card-link text-danger like">
            <i class="fas fa-heart"></i>
          </a>
        </div> *@

          <div class="card-body pb-0">
            <h4 class="card-title">@name</h4>
            <h6 class="card-subtitle mb-2 text-muted">@description</h6>
            <div class="row mb-2 ml-1">
              @for(int i = 0; i < color.Length; i++) {
                
                  <svg class="bd-placeholder-img rounded me-2 mr-1" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="@i"></rect></svg>
                
                
              }
            </div>
              @* <select class="custom-select ml-1">
                  <option selected>Size</option>
                  <option value="1">41</option>
                  <option value="2">42</option>
                  <option value="3">43</option>
              </select> *@
            </div>
            <div class="buy mx-4 d-flex justify-content-between align-items-center">

              <div class="price text-success"><h5 class="mt-4">LBP @price</h5></div>

               <a href="@orderMessage" class="btn btn-sucess mt-3"> <img src="https://img.icons8.com/office/40/000000/whatsapp--v3.png"/></a>

            </div>
        </div>
      </div>
    


@code {

  [Parameter]
  public string name { get; set; }

  [Parameter]
  public string description { get; set; }

  [Parameter]
  public string url { get; set; }

  [Parameter]
  public string price { get; set; }

  [Parameter]
  public string productLink { get; set; }

  [Parameter]
  public string[] color { get; set; }

  [Parameter]
  public string orderMessage { get; set; }

}